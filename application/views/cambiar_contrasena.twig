<div class="container1">
    <main>
        <div class="row"> 
            <div class="col s6 m6 ">
                <center>
                    <div class="container">
                        <div  class="z-depth-3 y-depth-3 x-depth-3 grey grey-text lighten-4 row" style="display: inline-block; padding: 32px 40px 0px 40px; border: 1px; margin-top: 100px; solid #EEE;">
                            <div class="section">
                                <img src="{{base_url}}public/imagenes/logo-ct.png" >
                            </div>
                            <div class="section">
                                <form  method="POST" action="#" name="fmrCambiarContrasena" id="fmrCambiarContrasena" onsubmit="cambiarContrasena(); return false;">
                                    <div class='row'>
                                        <div class='input-field col s12 m12'>
                                            <input class='validate' type="password" name='password' id='password' required />
                                            <label for='password'>Contraseña</label>
                                        </div>
                                    </div>
                                    <div class='row'>
                                        <div class='input-field col s12 m12'>
                                            <input class='validate' type="password" name='repetir_password' id='repetir_password' required />
                                            <label for='repetir_password'>Repetir contraseña</label>
                                        </div>
                                    </div>
                                    <input type="hidden" name='email' value="{{email}}"/>
                                    <input type="hidden" name='encrypt_password' value="{{encrypt_password}}"/>
                                    <center>
                                        <div class='row'> 
                                            <div class='col s6 m6'>
                                                <button class="btn waves-effect waves-light blue" type="submit">CAMBIAR CONTRASEÑA</button>
                                            </div>
                                        </div>
                                    </center> 
                                </form>           
                            </div>
                        </div>
                    </div>
                </center>
            </div>
            <div class="row">
                <div class="col s6">
                    <div class="section">
                        <img src="{{base_url}}public/imagenes/login/fondo_4.png">                              
                    </div>
                </div>    
            </div>    
        </div>    
    </main>
</div>

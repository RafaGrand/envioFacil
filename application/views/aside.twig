    <li>
        <div class="user-view">
            <div class="background">
                <img src="{{base_url}}public/imagenes/fondosidenav.jfif" width="400">
            </div>
            <a href="#user"><img class="circle" src="{{base_url}}public/imagenes/avatar/default_avatar.png"></a>
            <a href="#name"><span class="white-text name">{{data_sesion.nombre_user}}</span></a>
            <a href="#email"><span class="white-text email">{{data_sesion.email_user}}</span></a>
        </div>
    </li>
    <li>
        <a class="subheader">Configuración</a>
    </li>

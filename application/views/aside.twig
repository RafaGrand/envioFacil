        <li>
            <a class="nav-link text-white modal-trigger" href="#modal_usuario"><i class="material-icons">people</i>Usuarios</a>
        </li>
        <li>
            <a class="nav-link text-white modal-trigger" href="#modal_liquidacion_guias"><i class="material-icons">attach_money</i>Liquidacion de guias</a>
        </li>
    {% endif %}
    <li>
        <div class="divider"></div>
    </li>
    <li>
        <a href="#!" onclick="cerrarSesion()"><i class="material-icons opacity-10">login</i>Cerrar Sesión</a>
    </li>
